<div class="submenu">
  <h2 style="color:dimgrey; font-family: 'American Typewriter'">Категории</h2>
  <ul class="subnav nav-pills nav-stacked">
    <% Category.roots.each do |category| %>
      <li class="nav-item">
        <%= link_to category.name, category, class: "nav-link #{'active bg-secondary text-white' if current_page?(category_path(category)) || @post.present? && @post.category == category}" %>
        <%= render 'shared/submenu_categories', categories: category.root.descendants.arrange %>
      </li>
    <% end %>
  </ul>
</div>